@model Ignite.Models.RegisterModel

@using (Html.BeginForm("Register", "Account")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    <div id="register-form" class="twelve columns panel">
        <div class="editor-field">
            @Html.TextBoxFor(m => m.UserName, new { @placeholder="Username", @autocomplete="off" })
        </div>
                
        <div class="editor-field">
            @Html.TextBoxFor(m => m.Email, new { @placeholder="Email", @autocomplete="off" })
        </div>
                
        <div class="editor-field">
            @Html.PasswordFor(m => m.Password, new { @placeholder="Password", @autocomplete="off" })
        </div>
                
        <div class="editor-field">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder="Confirm Password", @autocomplete="off" })
        </div>
                
        <input type="submit" value="Register" class="small button loader" />
    </div>
}