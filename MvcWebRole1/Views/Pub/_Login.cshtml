@model Ignite.Models.LoginModel

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div id="login-form" class="twelve columns panel">
        <div class="row">
            <div class="twelve columns">
                @Html.TextBoxFor(m => m.UserName, new { @placeholder="Username" })
            </div>
        </div>
                
        <div class="row">
            <div class="twelve columns">
                @Html.PasswordFor(m => m.Password, new { @placeholder="Password" })
            </div>
        </div>
                
        <div class="row">
            <div class="four columns">
                <input type="submit" value="Login" id="login" class="small button loader" />
            </div>
            <div class="eight columns">
                @Html.CheckBoxFor(m => m.RememberMe, new { @style="margin-top:12px;" })
                <label for="RememberMe" style="display:inline;font-size:12px;position:relative;top:-2px;">Remember Me</label>
            </div>
        </div>
    </div>
}