@model Ignite.Models.UserViewModel

<!-- LEFT COLUMN -->
<div class="two columns">
    <img src="../../Content/uploads/@(Model.Profile.ProfileImage != null && Model.Profile.ProfileImage != "" ? 
                                            Model.Profile.ProfileImage : 
                                            "../images/default-profile-image.jpg") " 
        alt="profile image" class="profile-thumb" />
</div>
<!-- MIDDLE COLUMN -->
<div class="five columns">
    <div class="row">
        <div class="six columns bold">Username</div>
        <div class="six columns" id="UserName">@Model.User.UserName</div>
    </div>
        
    <div class="row">
        <div class="six columns bold">First Name</div>
        <div class="six columns">@Model.Profile.FirstName</div>
    </div>
        
    <div class="row">
        <div class="six columns bold">Last Name</div>
        <div class="six columns">@Model.Profile.LastName</div>
    </div>
        
    <div class="row">
        <div class="six columns bold">Email</div>
        <div class="six columns">@Model.User.Email</div>
    </div>
        
    <div class="row">
        <div class="six columns bold">Date of Birth</div>
        <div class="six columns">@Model.Profile.DOB.ToString("dd/MM/yyyy")</div>
    </div>
        
    <div class="row">
        <div class="six columns bold">Gender</div>
        <div class="six columns">@Model.Profile.Gender</div>
    </div>
</div>
<!-- RIGHT COLUMN -->
<div class="five columns">
    <div class="row">
        <div class="six columns bold">Address</div>
        <div class="six columns">@Model.Profile.Address1</div>
    </div>
        
    <div class="row">
        <div class="six columns bold">City</div>
        <div class="six columns">@Model.Profile.City</div>
    </div>
        
    <div class="row">
        <div class="six columns bold">Province</div>
        <div class="six columns">@Model.Profile.Province</div>
    </div>
        
    <div class="row">
        <div class="six columns bold">Country</div>
        <div class="six columns">@Model.Profile.Country</div>
    </div>
        
    <div class="row">
        <div class="six columns bold">Postal Code</div>
        <div class="six columns">@Model.Profile.PostalCode</div>
    </div>
</div>

<p style="text-align:center;clear:both;">
    <button class="small button" onclick="ShowEditDetails('@Model.User.UserName')">Edit Details</button>
</p>